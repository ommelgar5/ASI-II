    .container-login__modal#containerLoginModal
      span.container-login__close#closeLogin X
      img(src=`${img}logo.png`, alt="login-img").container-login__img
      form(action="/usuario.html" method="post").container-login__form
        .container-login__dato
          i.fas.fa-user-shield.container-login__icon
          input(type="text").container-login__input
        .container-login__dato
          i.fas.fa-key.container-login__icon
          input(type="password").container-login__input
        //input(type="submit" value="Ingresar").container-login__submit
        a(href="/usuario.html" style="display:block; text-align: center;").container-login__submit Ingresar
        .container-login__ref
